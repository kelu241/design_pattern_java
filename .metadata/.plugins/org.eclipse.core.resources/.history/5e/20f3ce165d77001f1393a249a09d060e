package br.com.dominio.MVC;
import javax.swing.*;

public class View extends JFrame{
	
	
	private JTextField numero1 = new JTextField(3);
	private JTextField numero2 = new JTextField(3);
	private JTextField resultado = new JTextField(6);
	private JButton botao = new JButton("Somar");
	
	public View() {
		
		JPanel painel = new JPanel();
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		this.setSize(400, 100);
		painel.add(numero1);
		painel.add(numero2);
		painel.add(resultado);
		
		this.add(painel);
		
		
	}
	
	public int getNumero1() {
		return Integer.parseInt(numero1.getSelectedText());
	}
	
	public int getNumero2() {
		return Integer.parseInt(numero2.getSelectedText());
	}
	public int getResultado() {
		return Integer.parseInt(resultado.getSelectedText());
	}

	
	public void setResultado(int valor) {
		this.resultado = this.resultado.setText(Integer.toString(valor));
	}

	
	public JButton getBotao() {
		return botao;
	}
	
	
}


